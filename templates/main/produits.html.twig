{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}

    <div class="container">
        <div class="jumbotron"> 
            <h2>Produits</h2>
                {% if produits|length == 0%}
                    <h4>Il n'y a aucun produit</h4>
                {% else %}
                    <h4>Il y a {{produits|length}} produits</h4>
                {% endif %}
        </div>
        <hr>    
        <ul class="list-group">
            {% for produit in produits %}
                <div class="card text-center" style="width: 30rem;">
                    {% if produit.photo is not null %}
                        <a href="produits/ficheProduits/{{produit.id}}"><img src="{{ asset('assets/images/' ~ produit.photo) }}" style="height:18rem"/></a>
                    {% endif %}
                    <div class="card-body" style="background-color: lightgrey;">
                        <h5 class="card-title">{{produit.nom}}</h5>
                        <p class="card-text">quantit√© : {{produit.quantite}}</p>
                        <p href="#" class="btn btn-primary">Prix : {{produit.prix}}</p>
                    </div>
                </div>
                <hr>
            {% endfor %}
            
        </ul>
        <hr>

        <div class="jumbotron">
            <h2>Ajouter un produit</h2><br>
            {{form(addProduits)}}
        </div>
    </div>

{% endblock %}

